<div class="p-5">
    <main>
        <section>
            <div class="card" style="width: 18rem;">
            <img src="https://www.apple.com/v/macbook-pro-14-and-16/b/images/overview/hero/hero_intro_endframe__e6khcva4hkeq_large.jpg" class="card-img-top" alt="Apple MacBook Pro">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p>{{category}}</p>
                    <p class="card-text">{{description}}</p>
                    <b>Best price: ${{price}}</b> <a href="#features" class="btn btn-primary" data-bs-toggle="collapse" aria-expanded="false" aria-controls="features">Details</a>
                </div>
                
            </div>
            <div class="collapse" id="features">
                <div class="card card-body mt-2">
                    {{>title data='Features' big=true}}
                    {{#with features}}
                        <ul>
                            <div class="row">
                                <div class="col-4">
                                    <li>
                                        <b>CPU:</b>
                                        {{#with processor}}
                                        <ul>
                                            <li>
                                                Brand: {{brand}}
                                            </li>
                                            <li>Model: {{model}}</li>
                                            <li>Speed: {{speed}}</li>
                                            <li>Core: {{cores}}</li>
                                            <li>Cache: {{cache}}</li>
                                        </ul>    
                                        {{/with}}
                                    </li>
                                    <br>
                                    <li>
                                        <b>RAM:</b>
                                        {{#with memory}}
                                        <ul>
                                            <li>Type: {{type}}</li>
                                            <li>Size: {{size}}</li>
                                            <li>Speed: {{speed}}</li>
                                        </ul>    
                                        {{/with}}
                                    </li>
                                    <br>
                                    <li>
                                        <b>Storage:</b>
                                        {{#with storage}}
                                        <ul>
                                            <li>Type: {{type}}</li>
                                            <li>Size: {{size}}</li>
                                        </ul>    
                                        {{/with}}
                                    </li>
                                    <br>
                                    <li>
                                        <b>Display:</b>
                                        {{#with display}}
                                        <ul>                                
                                            <li>Size: {{size}}</li>
                                            <li>Resolution: {{resolution}}</li>
                                            <li>Technology: {{technology}}</li>
                                            <li>Color space: {{color_space}}</li>
                                            <li>Brightness: {{brightness}}</li>
                                            <li>Refresh rate: {{refresh_rate}}</li>
                                        </ul>    
                                        {{/with}}
                                    </li>
                                </div>
                                <div class="col-4">
                                    <li>
                                        <b>Graphics:</b>
                                        {{#with graphics}}
                                        <ul>                                
                                            <li>Brand: {{brand}}</li>
                                            <li>Model: {{model}}</li>
                                            <li>Memory: {{memory}}</li>
                                        </ul>    
                                        {{/with}}
                                    </li>
                                    <br>
                                    <li>
                                        <b>Ports:</b>
                                        {{#each ports}}
                                        <ul>                                
                                            <li>Type: {{type}}</li>
                                            <li>Count: {{count}}</li>
                                            {{#if features}}
                                            <li>
                                                Features:
                                                <ul>
                                                    {{#each features}}
                                                    <li>{{this}}</li>
                                                    {{/each}}                                 
                                                </ul>
                                            </li>                                
                                            {{/if}}
                                        
                                        </ul>    
                                        {{/each}}
                                    </li>
                                    <br>
                                    <li>
                                        <b>Battery:</b>
                                        {{#with battery}}
                                        <ul>                                
                                            <li>Type: {{type}}</li>
                                            <li>Capacity: {{capacity}}</li>
                                            <li>Life: {{life}}</li>
                                        </ul>    
                                        {{/with}}
                                    </li>
                                </div>
                                <div class="col-4">
                                    <li>
                                        <b>Weight:</b> {{weight}}
                                    </li>
                                    <br>
                                    <li>
                                        <b>Dimensions:</b>
                                        {{#with dimensions}}
                                        <ul>                                
                                            <li>Height: {{height}}</li>
                                            <li>Width: {{width}}</li>
                                            <li>Depth: {{depth}}</li>
                                        </ul>    
                                        {{/with}}
                                    </li>
                                    <br>
                                    <li>
                                        <b>Operating system:</b> {{operating_system}}
                                    </li>
                                    <br>
                                    <li>
                                        <b>Accessories:</b>
                                        {{#each accessories}}
                                        <ul>                                
                                            <li>Name: {{name}}</li>
                                            <li>Price: <b>${{price}}</b></li>                                                                
                                        </ul>
                                        <br>   
                                        {{/each}}
                                    </li>
                                </div>
                            </div>
                        </ul>
                    {{/with}}                    
                </div>
            </div>

        </section>
    </main>
</div>