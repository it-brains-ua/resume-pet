<main class="p-5">

    <heder>
        <div class="card">
            {{#with navigation}}
            <div class="nav">
                {{#each links}}
                    <div class="nav-item">
                        <a class="nav-link" href="{{htef}}">{{text}}</a>
                    </div>
                {{/each}}
                <div class="pt-2 px-4">Disabled</div>
            </div>        
            {{/with}}
        </div>        
    </heder>
    
    <section>
        <h1 class="text-center my-4">{{header}}</h1>
        {{#with purchase}}
            <div class="nav nav-tabs">
                {{#with tabs}}
                    <div class="nav-item">
                        <a class="nav-link active" href="#">
                            {{[0]}}
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" href="#">
                            {{[1]}}
                        </a>
                    </div>
                {{/with}}
            </div>
            <div>
                {{#with actionBlock}}
                    <div class="row">
                        <div class="col-4 my-3">
                            {{#with input}}
                                <input class="form-control" placeholder="{{placeholder}}">
                            {{/with}}
                        </div>
                        <div class="col-8 my-3">
                            {{#each buttons}}
                                <a href="{{link}}" class="btn 
                                {{#if isSuccess}}
                                btn-success
                                {{/if}}
                                {{#if isOutline}}
                                btn-outline-success
                                {{/if}}
                                {{#if isDanger}}
                                btn-outline-danger
                                {{/if}}
                                me-2">
                                    {{text}}
                                </a>                                
                            {{/each}}
                        </div>                        
                    </div>                    
                {{/with}}
                <hr class="my-2">
                <div class="mt-3">
                    {{>purchaseItem}}
                </div>
            </div>
        {{/with}}

        <hr class="my-5">

        {{#with userInfo}}
            <h2>{{title}}</h2>
            {{#with profileData}}
                <div class="card mt-5">
                    <div class="card-body">
                        <h3>{{title}}</h3>
                        {{#with fullName}}
                            <div class="card mt-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-4">
                                            {{#with surname}}
                                                <div>{{title}}</div>
                                                <b>{{value}}</b>
                                            {{/with}}
                                            <div></div>
                                        </div>
                                        <div class="col-4">
                                            {{#with name}}
                                                <div>{{title}}</div>
                                                <b>{{value}}</b>
                                            {{/with}}
                                        </div>
                                        <div class="col-4">
                                            {{#with middleName}}
                                                <div>{{title}}</div>
                                                <b>{{value}}</b>
                                            {{/with}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/with}}

                        {{#with otherInfo}}
                            <div class="card mt-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-4">
                                            {{#with birthday}}
                                                <div>{{title}}</div>
                                                <b>{{value}}</b>
                                            {{/with}}
                                            <div></div>
                                        </div>
                                        <div class="col-4">
                                            {{#with sex}}
                                                <div>{{title}}</div>
                                                <b>{{value}}</b>
                                            {{/with}}
                                        </div>
                                        <div class="col-4">
                                            {{#with language}}
                                                <div>{{title}}</div>
                                                <b>{{value}}</b>
                                            {{/with}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/with}}

                        <div class="card mt-4">
                                <div class="card-body">
                                    <div class="row">
                                        {{#each ../buttons}}
                                            <div class="col-4">
                                                <a href="{{link}}" class="btn
                                                {{#if isPrimary}}
                                                btn-primary
                                                {{/if}}
                                                {{#if isSecondary}}
                                                btn-outline-secondary
                                                {{/if}}
                                                {{#if isDanger}}
                                                btn-outline-danger
                                                {{/if}}
                                                ">
                                                    {{text}}
                                                </a>                                            
                                            </div>
                                        {{/each}}
                                        
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            {{/with}}

            {{#with recipients}}
                <div class="card mt-3">
                    <div class="card-body">
                        <h3>{{title}}</h3>
                        <div class="row g-3">
                            {{#each users}}
                                <div class="col-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <div><b>{{name}}</b></div>
                                            <div class="mt-1 mb-3">{{phone}}</div>
                                            {{#with button}}
                                            <a href="{{link}}" class="btn btn-primary">
                                                {{text}}
                                            </a>
                                            {{/with}}
                                        </div>

                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            {{/with}}

            {{#with contacts}}
                <div class="card mt-3">
                    <div class="card-body">
                        <h3>{{title}}</h3>
                        <div class="row g-3">
                            {{#each contactData}}
                                <div class="col-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <div>{{title}}</div>
                                            <div class="my-3"><b>{{value}}</b></div>
                                            {{#with button}}
                                                <a href="{{link}}" class="btn
                                                {{#if isPrimary}}
                                                btn-primary
                                                {{/if}}
                                                {{#if isSecondary}}
                                                btn-outline-secondary
                                                {{/if}}
                                                {{#if isDanger}}
                                                btn-outline-danger
                                                {{/if}}
                                                ">
                                                    {{text}}
                                                </a>
                                            {{/with}}
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            {{/with}}

            

        {{/with}}

    </section>

    <footer>
        <hr class="mt-5 mb-3"> 
        <div class="nav flex-column">          
            <div class="row">
                {{>shopf data=footer.[0]}}
                {{>shopf data=footer.[1]}}
                {{>shopf data=footer.[2]}}
                {{>shopf data=footer.[3]}}
                {{>shopf data=footer.[4]}}                
            </div>
        </div> 
        
    </footer>
    
</main>