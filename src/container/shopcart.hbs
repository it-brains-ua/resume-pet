<main class="p-5">

    <heder>
        <div class="card">
            {{#with navigation}}
            <div class="nav">
                {{#each links}}
                    <div class="nav-item">
                        <a class="nav-link" href="{{htef}}">{{text}}</a>
                    </div>
                {{/each}}
                <div class="pt-2 px-4">Disabled</div>
            </div>        
            {{/with}}
        </div>        
    </heder>
    
    <section>
        <div class="mt-5">
          {{#with header}}
            <h1>{{title}} <i class="fa-solid fa-cart-shopping" style="color: #212529;"></i></h1>
                {{#with button}}
                    <button type="button" class="btn btn-outline-secondary">{{text}}</button>
                {{/with}}
            {{/with}}  
        </div>
        
        <hr class="my-5">

        <div>
            {{>cartGoodsItem}}
        </div>

        <hr class="my-5">

        <div>
            {{#with total}}
                <h3 class="pb-3 mb-0">{{title}}</h3>
                <p class="display-6">{{amount}}</p>
                <p>{{delivery}}</p>
                <div class="mt-3">
                    {{#each buttons}}
                        <div class="my-4"> 
                            <a href="{{link}}" class="btn
                            {{#if isSuccess}}
                            btn-success
                            {{/if}}
                            {{#if isOutline}}
                            btn-outline-success
                            {{/if}}
                            ">
                                {{text}}
                            </a>
                        </div>
                        
                    {{/each}}
                </div>
            {{/with}}
        </div>

        <hr class="my-5">

        <div>
            {{#with goodsOtherBlock}}
                <h3 class="pb-3 mb-2 text-center">{{title}}</h3>
                <div class="row">
                    {{#each cards}}
                        <div class="col-4">
                            <div class="card">
                                <img class="card-img-top" src="{{image}}" alt="random image">
                                <div class="card-body">
                                    <div class="card-title">
                                        <b>{{title}}</b>
                                        {{#if isHot}}
                                            <span class="badge rounded-pill text-bg-warning text-uppercase mx-1">hot!</span>     
                                        {{/if}}
                                        {{#if idNew}}
                                            <span class="badge rounded-pill text-bg-primary text-capitalize">нове</span>
                                        {{/if}} 
                                    </div>
                                    <div>
                                        {{description}}
                                    </div>

                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{/with}}
        </div>

        <hr class="my-5">

        <div>
            {{#with subscribe}}
            <div class="card text-bg-dark">
                <div class="card-body">
                    <h2>{{header}}</h2>
                    <p class="pt-3">{{description}}</p>
                    {{#each buttons}}
                    <div class="pt-4">
                        <button type="button" class="btn btn-primary">
                            {{text}}
                        </button>
                    </div>
                    {{/each}}
                </div>                
                
            </div>
            {{/with}}
        </div>
        
    </section>

    <footer>
        <hr class="mt-5 mb-3"> 
        <div class="nav flex-column">          
            <div class="row">
                {{>shopf data=footer.[0]}}
                {{>shopf data=footer.[1]}}
                {{>shopf data=footer.[2]}}
                {{>shopf data=footer.[3]}}
                {{>shopf data=footer.[4]}}                
            </div>
        </div> 
        
    </footer>
    
</main>