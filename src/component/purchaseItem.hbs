{{#each itemList}}    
    <div class="row">
        <div class="col-4 pe-5">
            <div>{{number}}</div>
            <div><b>{{status}}</b></div>
        </div>
        <div class="col-2">
            {{#with amount}}
            <p>{{title}}:</p>
            <p>{{value}}</p>
            {{/with}}
        </div>
        <div class="col-4 mx-0 px-0">
            {{#each images}}
            <img class="rounded" src="{{this}}" alt="randome image" height="88px">
            {{/each}}
        </div>
        <div class="col-2 mt-3 pt-2">
            {{#with button}}
                <a href="{{link}}" class="btn
                {{#if isPrimary}}
                btn-primary
                {{/if}}
                ">
                    {{text}}
                </a>
            {{/with}}
        </div>
    </div>
    <hr class="border-secondary">    
{{/each}}